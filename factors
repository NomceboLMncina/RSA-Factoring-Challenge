#!/usr/bin/python3
def check_factor(my_list):
    """check factor of number in a list"""
    import sys

    if len(my_list) == 0 or my_list is None:
        print("An error occured")
    for a in my_list:
       l = int(a)
       for m in range(2, sys.maxsize):
           if l % m == 0:
               print("{:d}={:d}*{:d}".format(l, int(l/m), m))
               break

def factoring_challenge():
    """factor two numbers"""
    import sys

    lis = sys.argv
    if len(lis) < 2:
        print("Error!:<USAGE> ./factors filename")
        exit(98)
    f_name = ''
    if len(lis) == 2:
        f_name = lis[1]
    if len(lis) == 3:
        f_name = lis[2]
    with open(f_name) as file_in:
        lines = []
        for line in file_in:
            lines.append(line)
    check_factor(lines)
factoring_challenge()
